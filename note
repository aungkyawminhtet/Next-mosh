//prisma find data
prisma.users.findMany => find all data
prisma.users.findUnique({where:{id:1}}) => find one data
const updatedUser = await prisma.user.update({
    where: { id: user.id },
    data: {
      name: body.name,
      email: body.email,
    },
  });
await prisma.user.delete({ where: { id: parseInt(id) },});


